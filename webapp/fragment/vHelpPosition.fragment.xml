<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idPositionVHelpDialog"
        title="Pozisyon SeÃ§imi"
        type="Standard"
        escapeHandler="._closeDialog"
    >
        <subHeader>
            <OverflowToolbar>
                <SearchField
                    visible="{= ${jsonModel>/sHelpPositionTreeData}.length > 500}"
                    change="_positionTreeSearch"
                    width="100%"
                />
            </OverflowToolbar>
        </subHeader>
        <content>
            <Tree
                id="idSHelpPositionTreeDataTree"
                selectionChange="onSHelpPositionTreeDataTreeSelectionChange"
                items="{jsonModel>/sHelpPositionTreeData}"
                mode="SingleSelectLeft"
                growing="true"
                growingThreshold="1"
            >
                <StandardTreeItem
                    icon="{jsonModel>ref}"
                    title="{jsonModel>mergedText}"
                    highlightText="{jsonModel>Objid}"
                >
                    <customData>
                    <core:CustomData key="Otype" value="{jsonModel>Otype}" writeToDom="true"></core:CustomData>
                    </customData>
                </StandardTreeItem>
            </Tree>
        </content>
        <buttons>
            <Button
                text="Kapat"
                press="_closeDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
