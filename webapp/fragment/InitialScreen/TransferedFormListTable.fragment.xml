<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Table
        id="idPersonalFormListSetTableTransfered"
        items="{
            path: 'jsonModel>/PersonalFormListSet',
            filters: [{
                path: 'Statu',
                operator: 'EQ',
                value1: '05'
            }]
        }"
        mode="None"
        selectionChange="onPersonalFormListSetTableSelectionChange"
        itemPress="onPersonalFormListSetTableItemPress"
        fixedLayout="false"
        growing="true"
        growingThreshold="15"
        growingScrollToLoad="true"
    >
        <headerToolbar>
            <Toolbar class="sapUiTinyMarginTop">
                <Title text="Talep Listem" />
                <ToolbarSpacer />
                <!-- <Button
                    press="resetSelections($event, 'idPersonalFormListSetTableTransfered')"
                    icon="sap-icon://reset"
                    type="Emphasized"
                /> -->
                
                <SearchField
                    showRefreshButton="false"
                    enableSuggestions="true"
                    tooltip="{i18n>listSearchTooltip}"
                    suggest="onSuggest"
                    suggestionItems="{
                        path: '/PersonalFormListSet'
                    }"
                    search="_onSearchcidMyPYPListTableAll($event, 'idPersonalFormListSetTableTransfered', '05')"
                    width="auto"
                >
                    <SuggestionItem
                        key="{jsonModel>id}"
                        text="{jsonModel>TplansT}"
                        description="{jsonModel>Btext}"
                    />
                </SearchField>
                <Button
                    press="refreshTransferedTable($event, 'idPersonalFormListSetTableTransfered')"
                    icon="sap-icon://refresh"
                    type="Emphasized"
                />
                <Button
                    press=".onOpenViewSettings"
                    icon="sap-icon://sort"
                    type="Transparent"
                />
                <Button
                    text="Onaya Gönder"
                    visible="{= ${jsonModel>/sendToApproveSPaths}.length > 0 ? true : false}"
                    press="onOnayaGnderButtonPress"
                    type="Accept"
                    icon="sap-icon://paper-plane"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Talep No" />
            </Column>
            <Column>
                <Text text="Talep Edilen Pozisyon" />
            </Column>
            <Column>
                <Text text="Talep Edilen Çalışan Sayısı" />
            </Column>
            <Column>
                <Text text="Çalışacağı Lokasyon" />
            </Column>
            <Column>
                <Text text="Onay Durumu" />
            </Column>
            <Column>
                <Text text="" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <ObjectIdentifier text="{
                    path: 'jsonModel>Guid',
                    formatter: '.formatter.removeDatsFromString'
                }" />
                <ObjectIdentifier text="{jsonModel>TplansT}" />
                <ObjectIdentifier text="{
                    path: 'jsonModel>Tcsayi',
                    type: 'sap.ui.model.odata.type.String',
                    constraints: {
                        isDigitSequence: true,
                        maxLength: 10
                    }
                }" />
                <ObjectIdentifier text="{jsonModel>Btext}" />
                <ObjectStatus
                    text="{
                        path: 'jsonModel>Statu',
                        formatter: '.formatter.setStatusText'
                    }"
                    icon="{
                        path: 'jsonModel>Statu',
                        formatter: '.formatter.setStatusIcon'
                    }"
                    state="{
                        path: 'jsonModel>Statu',
                        formatter: '.formatter.setStatusState'
                    }"
                />
                <Button icon="sap-icon://edit" press="onEditDraftButton"/>
                <!-- <MenuButton
                    text="İşlemler"
