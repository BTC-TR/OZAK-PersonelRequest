<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idLocationVHelpDialog"
        title="Lokasyon SeÃ§imi"
        type="Standard"
        escapeHandler="._closeDialog"
    >
        <subHeader>
            <OverflowToolbar>
                <SearchField
                    liveChange="_locationVHelpSearch"
                    width="100%"
                />
            </OverflowToolbar>
        </subHeader>
        <content>
            <List
                id="idLocationVHelp"
                items="{
                    path : 'jsonModel>/SHelp_LocationsSet'
                }"
                selectionChange="onSHelpCustomersSetVHelpChange"
                mode="SingleSelectMaster"
                growing="true"
                includeItemInSelection="true">
                <StandardListItem
                    title="{
                        path: 'jsonModel>Btext'
                    }"
                    info="{jsonModel>Btrtl}"
                    description="{jsonModel>Werks}"
                    iconDensityAware="false"
                    iconInset="false" />
            </List>
        </content>
        <buttons>
            <Button
                text="Kapat"
                press="_closeDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
